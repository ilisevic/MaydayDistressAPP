<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boilerplatecode.SOSbasic">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <application

        android:name="com.boilerplatecode.SOSbasic.utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/logo_sos_small"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_sos_small"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.boilerplatecode.SOSbasic.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.boilerplatecode.SOSbasic.service.SoundService" />
        <service android:name="com.boilerplatecode.SOSbasic.service.FlashServiceThread2" />
    </application>

</manifest>